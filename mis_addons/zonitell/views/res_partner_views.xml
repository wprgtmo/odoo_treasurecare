<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View zonitell_callers form -->
    <record id="view_zonitell_contactos_form" model="ir.ui.view">
        <field name="name">view.zonitell_contactos.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"></field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='internal_notes']" position="after">
                <page name="calls" string="Calls">
                    <group>
                        <field name="llamadas" string=""/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <!-- actions opening views on models -->


    <record model="ir.actions.act_window" id="zonitell.action_contacts_window">
        <field name="name">Contactos con llamadas</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>



    <record model="ir.actions.act_window.view" id="zonitell.action_view_contacts_tree">
        <field name="sequence" eval="1"></field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="base.view_partner_tree"></field>
        <field name="act_window_id" ref="action_contacts_window"></field>
    </record>

    <record model="ir.actions.act_window.view" id="zonitell.action_view_contacts_form">
        <field name="sequence" eval="2"></field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_zonitell_contactos_form"></field>
        <field name="act_window_id" ref="action_contacts_window"></field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="zonitell.action_contacts_window">
        <field name="name">zonitell contacts window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>



</odoo>